{% extends 'base.html.twig' %}

{% block title %}Afficher un user{% endblock %}

{% block body %}
    <h2>Afficher un user</h2>
    <p>
        <b>Pr√©nom : </b>
        {{ user.firstName }}
    </p>
    <p>
        <b>Date de naissance : </b>
